<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="414dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Alue:"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:entries="@array/alue"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignStart="@+id/spinner2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ala:"
            android:id="@+id/textView7"
            android:layout_below="@+id/spinner"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinner2"
            android:layout_below="@+id/spinner"
            android:layout_alignStart="@+id/spinner3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Palkka-ryhmä:"
            android:id="@+id/textView8"
            android:layout_below="@+id/spinner2"
            android:layout_toStartOf="@+id/spinner3"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView13" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinner3"
            android:layout_below="@+id/spinner2"
            android:layout_alignStart="@+id/spinner4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aseta tiedot"
            android:id="@+id/button2"
            android:textAllCaps="false"
            android:layout_below="@+id/textView12"
            android:layout_alignEnd="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kokemus-\nvuodet:"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinner4"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignEnd="@+id/button2"
            android:layout_toEndOf="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tietojen asettaminen"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Veroprosentti:"
            android:id="@+id/textView12"
            android:layout_below="@+id/spinner5"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignTop="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Työsuhteen-\nmuoto:"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinner5"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignStart="@+id/spinner4" />


    </RelativeLayout>
</LinearLayout>