<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity">


    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/calendar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/calendar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/calendar"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tammikuu:"
                android:id="@+id/tammi"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helmikuu:"
                android:id="@+id/helmi"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/tammi"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maaliskuu:"
                android:id="@+id/maalis"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/helmi"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huhtikuu:"
                android:id="@+id/huhti"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/maalis"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toukokuu:"
                android:id="@+id/touko"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/huhti"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kesäkuu:"
                android:id="@+id/kesa"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/touko"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_tammi"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tammi"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_helmi"
                android:textStyle="bold"
                android:layout_below="@+id/p_tammi"
                android:layout_toEndOf="@+id/helmi"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_maalis"
                android:textStyle="bold"
                android:layout_below="@+id/p_helmi"
                android:layout_toEndOf="@+id/maalis"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_huhti"
                android:textStyle="bold"
                android:layout_below="@+id/p_maalis"
                android:layout_toEndOf="@+id/huhti"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_touko"
                android:textStyle="bold"
                android:layout_below="@+id/p_huhti"
                android:layout_toEndOf="@+id/touko"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:id="@+id/p_kesa"
                android:textStyle="bold"
                android:layout_below="@+id/p_touko"
                android:layout_toEndOf="@+id/kesa"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heinäkuu:"
                android:id="@+id/heina"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elokuu:"
                android:id="@+id/elo"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignTop="@+id/p_helmi"
                android:layout_alignStart="@+id/heina"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syyskuu:"
                android:id="@+id/syys"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignTop="@+id/p_maalis"
                android:layout_alignStart="@+id/heina"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokakuu:"
                android:id="@+id/loka"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignTop="@+id/p_huhti"
                android:layout_alignStart="@+id/heina"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marraskuu:"
                android:id="@+id/marras"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignTop="@+id/p_touko"
                android:layout_alignStart="@+id/heina"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joulukuu:"
                android:id="@+id/joulu"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignTop="@+id/p_kesa"
                android:layout_alignStart="@+id/heina"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_heina"
                android:layout_above="@+id/p_helmi"
                android:layout_toEndOf="@+id/heina"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_elo"
                android:layout_above="@+id/p_maalis"
                android:layout_toEndOf="@+id/elo"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_syys"
                android:layout_above="@+id/p_huhti"
                android:layout_toEndOf="@+id/syys"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_loka"
                android:layout_above="@+id/p_touko"
                android:layout_toEndOf="@+id/loka"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_marras"
                android:layout_above="@+id/p_kesa"
                android:layout_toEndOf="@+id/marras"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0€"
                android:textStyle="bold"
                android:id="@+id/p_joulu"
                android:layout_toEndOf="@+id/joulu"
                android:layout_alignTop="@+id/joulu"
                android:textSize="22dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:text="Poista merkintä"
                android:id="@+id/Poisto"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/p_marras"
                android:layout_below="@+id/joulu"
                android:textSize="22dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
